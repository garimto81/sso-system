# SSO Auth Server - Environment Variables
# Copy this file to .env and fill in the values

# ====================
# Supabase Configuration
# ====================
# Get these from: https://supabase.com/dashboard/project/{your-project}/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ====================
# JWT Configuration
# ====================
# Generate secure random strings for production:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_SECRET=your-jwt-secret-here-min-32-chars
SESSION_SECRET=your-session-secret-here-min-32-chars

# ====================
# Server Configuration
# ====================
PORT=3001
NODE_ENV=development

# ====================
# CORS Configuration
# ====================
# Comma-separated list of allowed origins
# Use '*' for development only, never in production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================
# Rate Limiting
# ====================
# Max requests per time window
RATE_LIMIT_AUTH=5
RATE_LIMIT_TOKEN=10
RATE_LIMIT_API=100
RATE_LIMIT_HEALTH=1000

# Time window in minutes
RATE_LIMIT_WINDOW=15

# ====================
# Logging
# ====================
# Options: error, warn, info, debug
LOG_LEVEL=info

# Log file paths (relative to server root)
LOG_ERROR_FILE=logs/error.log
LOG_COMBINED_FILE=logs/combined.log

# ====================
# Admin Dashboard (Future)
# ====================
# ADMIN_DASHBOARD_URL=http://localhost:3000

# ====================
# Production Notes
# ====================
# 1. NEVER commit .env to version control
# 2. Use strong random values for JWT_SECRET and SESSION_SECRET
# 3. Set ALLOWED_ORIGINS to specific domains (no wildcards)
# 4. Use NODE_ENV=production in production
# 5. Rotate secrets regularly
# 6. Use environment-specific .env files (.env.production, .env.staging)
